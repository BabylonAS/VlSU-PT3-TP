<!DOCTYPE html>
<html lang="ru">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] — Контроль расходных материалов</title>
    @* стили Bootstrap *@
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" />
    @* локальные стили *@
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="app-wrapper">
        <header class="app-header">
            <div class="container">
                <article class="row">
                    <section class="col-lg-7 col-md-6 col-xs-12">
                        <a asp-area="" asp-page="/Index" class="fw-bold">
                            Главная страница
                        </a>
                    </section>
                </article>
            </div>
        </header>
        @RenderBody()
        <footer class="app-footer">
            <div class="container">
                <article class="row">
                    <section class="col-sm-6"></section>
                    <section class="col-sm-6">
                        <div class="app-footer-text hidden-xs">© Никита Наиста, 2023</div>
                    </section>
                </article>
            </div>
        </footer>
    </div>
    @* сценарии Bootstrap *@
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    @* сценарии jQuery *@
    <script src="~/lib/jquery/jquery.js"></script>
    @* локальные сценарии *@
    <!--<script src="~/js/site.js"></script>-->
    @* сценарии, специфичные для страницы/представления *@
    @RenderSection("scripts", required: false)
</body>
</html>
